{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
  },
  "exclude": [
    "app.config.ts",
    "eslint.config.*"
  ]
}
